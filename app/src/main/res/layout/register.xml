<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:id="@+id/change_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user" />

    <RelativeLayout
        android:id="@+id/avatar_to_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreyDarker"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/rowUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_1_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_avatar_02" />

            <ImageView
                android:id="@+id/avatar_2_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_avatar_03" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowUpper"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_3_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_avatar_04" />

            <ImageView
                android:id="@+id/avatar_4_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_avatar_05" />
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="What's your name?"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/surname_register"
        style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="What about your surname?"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="your@email.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type your password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

    <TextView
        android:id="@+id/already_registered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already registered?"
        android:textAlignment="center" />

    <Button
        android:id="@+id/goto_signin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signin" />
</LinearLayout>